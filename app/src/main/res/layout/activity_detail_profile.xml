<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailProfile"
    android:background="#E5E5E5"
    >


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#C4C4C4"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageViewLogin"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            app:srcCompat="@drawable/image_profile" />
    </LinearLayout>

    <TextView
        android:id="@+id/textProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="ALDI REZEKI RAMDANI"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear1" />
    <ImageView
        android:id="@+id/imageToDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textProfil"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/ic_dashboard_black_24dp"
        android:onClick="pindahProfil"
        />

    <TextView
        android:id="@+id/nim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgprofil"
        android:fontFamily="@font/poppins_medium"
        android:padding="15dp"
        android:text="@string/_10119273"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageToDashboard"
        />
    <TextView
        android:id="@+id/kelas"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgprofil"
        android:fontFamily="@font/poppins_medium"
        android:padding="15dp"
        android:text="@string/unikom_if_7_akb"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/nim"
         />
    <TextView
        android:id="@+id/alamat"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bgprofil"
        android:fontFamily="@font/poppins_medium"
        android:padding="15dp"
        android:text="@string/lembang_bandung_barat"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/kelas"
        />
    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bgprofil"
        android:fontFamily="@font/poppins_medium"
        android:padding="15dp"
        android:text="Suka nonton Anime"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/alamat"
        />

    <ImageView
        android:id="@+id/imageToLogout"
        android:layout_width="56dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:foregroundGravity="center"
        android:onClick="pindahLogoutl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc"
        app:srcCompat="@drawable/ic_baseline_exit_to_app_24" />

</androidx.constraintlayout.widget.ConstraintLayout>